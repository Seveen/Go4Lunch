<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="address"
            type="String" />
        <variable
            name="openingTime"
            type="String" />
        <variable
            name="distance"
            type="String" />
        <variable
            name="nbWorkmates"
            type="String" />
        <variable
            name="stars"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{address}"
            app:layout_constraintStart_toStartOf="@+id/list_item_name"
            app:layout_constraintTop_toBottomOf="@+id/list_item_name" />

        <TextView
            android:id="@+id/list_item_open_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{openingTime}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_address" />


        <TextView
            android:id="@+id/list_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{distance}"
            app:layout_constraintEnd_toStartOf="@+id/list_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_item_nb_workmates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{nbWorkmates}"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@+id/list_item_image"
            app:layout_constraintTop_toBottomOf="@+id/list_item_distance" />

        <TextView
            android:id="@+id/list_item_stars"
            android:layout_width="6dp"
            android:layout_height="19dp"
            android:text="@{stars}"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@+id/list_item_image"
            app:layout_constraintTop_toBottomOf="@+id/list_item_nb_workmates" />


        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_stars"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
